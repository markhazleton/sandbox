@{
    ViewData["Title"] = "Dashboard";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body">
                    <div class="text-center mb-4">
                        <i class="bi bi-speedometer2 fs-1 text-primary"></i>
                        <h1 class="h3 mb-3 fw-normal">Welcome to Your Dashboard</h1>
                        <p class="text-muted">This is a protected area that requires authentication.</p>
                    </div>
                    
                    <div class="alert alert-success" role="alert">
                        <i class="bi bi-check-circle"></i>
                        <strong>Success!</strong> You are successfully authenticated as <strong>@ViewBag.UserEmail</strong>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card border-primary">
                                <div class="card-body text-center">
                                    <i class="bi bi-person-gear fs-1 text-primary"></i>
                                    <h5 class="card-title">Account Management</h5>
                                    <p class="card-text">Manage your profile and account settings.</p>
                                    <a href="/Identity/Account/Manage" class="btn btn-primary">
                                        <i class="bi bi-gear"></i> Manage Account
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card border-info">
                                <div class="card-body text-center">
                                    <i class="bi bi-shield-check fs-1 text-info"></i>
                                    <h5 class="card-title">Security</h5>
                                    <p class="card-text">Your account is protected by Microsoft Identity.</p>
                                    <a href="/Identity/Account/Manage" class="btn btn-info">
                                        <i class="bi bi-shield"></i> Security Settings
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mt-4">
                        <h5><i class="bi bi-info-circle"></i> Authentication Information</h5>
                        <ul class="list-group">
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span><i class="bi bi-person"></i> Username</span>
                                <span class="badge bg-primary rounded-pill">@ViewBag.UserEmail</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span><i class="bi bi-check-circle"></i> Authentication Status</span>
                                <span class="badge bg-success rounded-pill">Authenticated</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span><i class="bi bi-database"></i> Database</span>
                                <span class="badge bg-info rounded-pill">SQLite</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
